@model SignInDto
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Login V1</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link href="~/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <img src="~/Templete/Login_v1/images/icons/favicon.ico" />
    <!--===============================================================================================-->
    <link href="~/Templete/Login_v1/vendor/bootstrap/bootstrap.min.css" rel="stylesheet" />
    <!--===============================================================================================-->

    <link href="~/Templete/Login_v1/fonts/font-awesome-4.7.0/css/font-awesome.css" rel="stylesheet" />
    <!--===============================================================================================-->
    <link href="~/Templete/Login_v1/vendor/animate/animate.css" rel="stylesheet" />
    <!--===============================================================================================-->
    <link href="~/Templete/Login_v1/vendor/css-hamburgers/hamburgers.css" rel="stylesheet" />
    <!--===============================================================================================-->
    <link href="~/Templete/Login_v1/vendor/select2/select2.css" rel="stylesheet" />
    <!--===============================================================================================-->

    <link href="~/Templete/Login_v1/css/util.css" rel="stylesheet" />
    <link href="~/Templete/Login_v1/css/main.css" rel="stylesheet" />
    <!--===============================================================================================-->
</head>
<body>
    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100 ">

                <form class="login100-form validate-form mx-auto" asp-action="SignIn" method="post">
                    <span class="login100-form-title">
                        Login
                    </span>

                    <div class="wrap-input100 validate-input" data-validate="Valid email is required: ex@abc.xyz">
                        <input class="input100" asp-for="Username" placeholder="Email">
                        <span class="focus-input100" asp-validation-for="Username"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-envelope" aria-hidden="true"></i>
                        </span>
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Password is required">
                        <input type="password" class="input100" asp-for="Password" placeholder="Şifrə">
                        <span class="focus-input100" asp-validation-for="Password"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-lock" aria-hidden="true"></i>
                        </span>
                    </div>

                    <div class="container-login100-form-btn">
                        <button class="login100-form-btn" type="submit">
                            Login
                        </button>
                    </div>

                    <div class="text-center p-t-12">
                        <span class="txt1">
                            Forgot
                        </span>
                        <a class="txt2" href="#">
                            Username / Password?
                        </a>
                    </div>

                    <div class="text-center p-t-136">
                        <a class="txt2" asp-controller="Home" asp-action="SignUp">
                            Create your Account
                            <i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>




    <!--===============================================================================================-->
    <script src="~/Templete/Login_v1/vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Templete/Login_v1/vendor/bootstrap/js/popper.js"></script>
    <script src="~/Templete/Login_v1/vendor/bootstrap/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Templete/Login_v1/vendor/select2/select2.js"></script>
    <!--===============================================================================================-->
    <script src="~/Templete/Login_v1/vendor/tilt/tilt.jquery.min.js"></script>
    <script>
        $('.js-tilt').tilt({
            scale: 1.1
        })
    </script>
    <!--===============================================================================================-->
    <script src="~/Templete/Login_v1/js/main.js"></script>

</body>
</html>
