@model UserListDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@if (TempData["message"] != null)
{
    <div class="alert alert-primary alert-dismissible fade show" role="alert">
        @TempData["message"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<form asp-action="Index" method="post" class="w-75 mx-auto p-3" enctype="multipart/form-data">
    <div class="form-group">
        <input type="hidden" asp-for="Id" />
        <label asp-for="Name">Ad :</label>
        <span asp-validation-for="Name" class="text-danger"></span>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="SurName">Soyad :</label>
        <span asp-validation-for="SurName" class="text-danger"></span>
        <input asp-for="SurName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Email">Email :</label>
        <span asp-validation-for="Email" class="text-danger"></span>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group my-2">
        <div class="col-md-4">
            <div>
                <h5>Hazirki sekiliniz</h5>
                <img src="/img/@Model.Picture" style="height: 10rem !important;" alt="@Model.Name" />
            </div>

        </div>
        <div class="col-md-4">

        </div>
        <div class="col-md-4">
            <div id="sekilOnizleme" style="display: none !important;">
                <h5>Secdiyiniz Sekil:</h5>
                <img id="Sonizleme" style="height: 10rem !important;" />
            </div>
        </div>
        <div class="col-md-4">
            <label>Sekil sec</label>
            <input type="file" class="form-control-file" name="sekil" id="Sekil" />
        </div>
    </div>
    <button class="btn btn-info btn-sm my-2" type="submit">
        <i class="fas fa-save mr-2"></i>Saxla
    </button>

</form>

@section JavaScript{

    <script type="text/javascript">
        $(document).ready(function () {
            $("#Sekil").change(function (e) {

                $("#sekilOnizleme").show();
                $("#Sonizleme").attr('src', URL.createObjectURL(e.target.files[0]));
            });
        });
    </script>
}
