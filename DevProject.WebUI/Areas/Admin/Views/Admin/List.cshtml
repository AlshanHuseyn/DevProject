@model List<JobListDto>
@{
    ViewData["Title"] = "List";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="container embed-responsive">
    @if (Model.Count != 0)
    {
        <div class="container">
            <div class="row my-2">
                <div class="col-4">
                    <div>
                        <a asp-area="Admin" asp-controller="Admin" asp-action="Add" class="btn btn-outline-success"><i class="fas fa-plus-circle mx-2"></i>Yeni IS</a>
                    </div>
                </div>
                <div class="col-4">

                </div>
            </div>

            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Description</th>
                        <th>CreationDate</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Description</td>
                            <td>@item.CreationDate</td>
                            <td>
                                <a asp-action="Update" asp-controller="Admin" asp-area="Admin" asp-route-id="@item.Id" class="btn btn-warning"><i class="far fa-edit mr-2"></i>Güncəllə</a>
                            </td>
                            <td>
                                <a asp-controller="Admin" asp-area="Admin" asp-action="Delete" asp-route-id="@item.Id"
                                   class="btn btn-danger"><i class="far fa-trash-alt mr-2"></i>Sil</a>
                            </td>
                            <td>
                                <a asp-controller="JobDetails" asp-area="Admin" asp-action="JobDetails" asp-route-id="@item.Id" class="btn btn-info"><i class="fas fa-info-circle mx-2"></i>Detallar</a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="container my-2">
            <div class="text-center text-dark">
                <p class="lead">
                    Is Listesi Bosdur!
                </p>
                <a asp-area="Admin" asp-controller="Admin" asp-action="Add" class="btn btn-outline-success"><i class="fas fa-plus-circle mx-2 my-2"></i>Yeni IS</a>
            </div>
        </div>
    }
</div>
