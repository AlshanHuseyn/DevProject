@model AdminHomeViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container my-3">
    <div class="row">
        <div class="col-6">
            <div class="card text-white bg-success mb-3 text-center">
                <div class="card-body">
                    <h4 class="card-title">Hesabat Sayi</h4>
                    @if (Model.UmumiReportSayi > 0)
                    {
                        <p class="card-text display-4"> @Model.UmumiReportSayi</p>
                        <p>
                            <a asp-controller="Bildirim" asp-action="Index" class="btn btn-outline-light"><i class="fas fa-arrow-circle-right mr-1"></i>Incele</a>
                        </p>
                    }
                    else
                    {
                        <p class="card-text lead"> Hesabat Yazmamisiniz!</p>
                    }

                </div>
            </div>
        </div>

        <div class="col-6">
            <div class="card text-white bg-success mb-3 text-center">
                <div class="card-body">
                    <h4 class="card-title">Tamamlanan Is Sayi</h4>
                    @if (Model.TamamlanmisIssayi > 0)
                    {
                        <p class="card-text display-4"> @Model.TamamlanmisIssayi </p>
                        <p>
                            <a asp-controller="Admin" asp-action="List" class="btn btn-outline-light"><i class="fas fa-arrow-circle-right mr-1"></i>Incele</a>
                        </p>
                    }
                    else
                    {
                        <p class="card-text lead"> Is Tamamlamayibsiniz!</p>
                    }

                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-6">
            <div class="card text-white bg-success mb-3 text-center">
                <div class="card-body">
                    <h4 class="card-title">Oxunmamis Bildirim Sayi</h4>
                    @if (Model.BildirimSayi > 0)
                    {
                        <p class="card-text display-4"> @Model.BildirimSayi</p>
                        <p>
                            <a asp-controller="Bildirim" asp-action="Index" class="btn btn-outline-light"><i class="fas fa-arrow-circle-right mr-1"></i>Incele</a>
                        </p>
                    }
                    else
                    {
                        <p class="card-text lead"> Bildiriminiz Yoxdur!</p>
                    }

                </div>
            </div>
        </div>

        <div class="col-6">
            <div class="card text-white bg-success mb-3 text-center">
                <div class="card-body">
                    <h4 class="card-title">Tamamlanmayan Is Sayi</h4>
                    @if (Model.TeyinEdilmemisIsSayi > 0)
                    {
                        <p class="card-text display-4"> @Model.TeyinEdilmemisIsSayi</p>
                        <p>
                            <a asp-controller="Admin" asp-action="List" class="btn btn-outline-light"><i class="fas fa-arrow-circle-right mr-1"></i>Incele</a>
                        </p>
                    }
                    else
                    {
                        <p class="card-text lead"> Is Yoxdur!</p>
                    }

                </div>
            </div>
        </div>
    </div>
</div>
