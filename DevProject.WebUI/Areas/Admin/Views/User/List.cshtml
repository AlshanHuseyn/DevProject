@model List<UserListDto>
@{
    ViewData["Title"] = "List";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    @foreach (var item in Model)
    {
        <div class="card mb-3 border border-primary p-2">
            <div class="row no-gutters">
                <div class="col-md-4">
                    <img src="~/img/@item.Picture"
                         class="card-img img-thumbnail shadow" style="height:15rem!important" alt="@item.Name">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">@item.Name @item.SurName</h5>
                        <p class="card-text">
                            <getirGorevAppUserId app-user-id="@item.Id"></getirGorevAppUserId>
                        </p>
                    </div>
                </div>
            </div>
            <div>
                <a class="btn btn-dark btn-sm" asp-area="Admin" asp-controller="User" asp-action="UpdateUser" asp-route-id="@item.Id">Guncelle</a>
                <a class="btn btn-dark btn-sm" asp-area="Admin" asp-controller="User" asp-action="DeleteUser" asp-route-id="@item.Id">Sil</a>
                <a class="btn btn-dark btn-sm" asp-area="Admin" asp-controller="User" asp-action="UserDetails" asp-route-userId="@item.Id">Detaylar</a>
            </div>

        </div>
    }

    <div class="my-2 mx-auto">
        <a class="btn btn-success" asp-controller="User" asp-area="Admin" asp-action="AddUser"><i class="fas fa-user-plus mx-2"></i>Add User</a>
    </div>
</div>
