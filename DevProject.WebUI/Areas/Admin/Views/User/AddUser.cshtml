@model AddUserDto
@{
    ViewData["Title"] = "AddUser";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <div class="my-2">
        <form asp-action="AddUser" method="post" class="mx-auto w-75 p-3">
            <div class="form-group">
                <label asp-for="Name">Ad</label>
                <span asp-validation-for="Name" class="text-danger"></span>
                <input class="form-control" asp-for="Name" type="text" />
            </div>
            <div class="form-group">
                <label asp-for="SurName">Soyad</label>
                <span asp-validation-for="SurName" class="text-danger"></span>
                <input class="form-control" asp-for="SurName" />
            </div>
            <div class="form-group">
                <label asp-for="Age">Yas</label>
                <span asp-validation-for="Age" class="text-danger"></span>
                <input class="form-control" asp-for="Age" />
            </div>
            <div class="form-group">
                <label asp-for="Salary">Maas</label>
                <span asp-validation-for="Salary" class="text-danger"></span>
                <input class="form-control" asp-for="Salary" />
            </div>
            <div class="form-group">
                <label asp-for="Picture">Sekil Sec</label>
                <input type="file" class="form-control-file" asp-for="Picture">
            </div>
            <div class="form-group">
                <label asp-for="DepartmentId">Department</label>
                <span asp-validation-for="DepartmentId" class="text-danger"></span>
                <select class="form-control" asp-for="DepartmentId" asp-items="ViewBag.Departments">
                    <option hidden value="-1">Department Secin</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="UserName">Istifadeci adi</label>
                <span asp-validation-for="UserName" class="text-danger"></span>
                <input class="form-control" asp-for="UserName" />
            </div>
            <div class="form-group">
                <label asp-for="Email">Email</label>
                <span asp-validation-for="Email" class="text-danger"></span>
                <input class="form-control" asp-for="Email" />
            </div>
            <div class="form-group">
                <label asp-for="Password">Sifre</label>
                <span asp-validation-for="Password" class="text-danger"></span>
                <input class="form-control" asp-for="Password" />
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword">Sifreni Tesdiqleyin</label>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                <input class="form-control" asp-for="ConfirmPassword" />
            </div>
            <button type="submit" class="btn btn-dark"><i class="fas fa-save mr-2"></i>Save</button>
        </form>
    </div>
</div>
