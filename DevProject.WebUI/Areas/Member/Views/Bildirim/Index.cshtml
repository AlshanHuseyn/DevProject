@model List<BildirimListDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Member/Views/Shared/_MemberLayout.cshtml";
}

<div class="container">
    @if (@Model.Count > 0)
    {
        @foreach (var bildirim in Model)
        {
            <div class="alert alert-light p-3 my-2">
                <form method="post" asp-action="Index" class="my-1">
                    <p class="lead">
                        <input type="hidden" name="id" value="@bildirim.Id" />
                        @bildirim.Aciqlama
                        <button type="submit" class="btn btn-outline-dark btn-sm float-right">
                            Oxundu
                        </button>
                    </p>
                </form>
            </div>
        }
    }
    else
    {
        <div class="alert alert-light p-3 my-2">
            <p class="lead text-center text-black font-weight-bold">
                Oxunmamis bildirim yoxdur!
            </p>
        </div>
    }

</div>
