@model HomeViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Member/Views/Shared/_MemberLayout.cshtml";
}

<div class="container my-3">
    <div class="row">
        <div class="col-6">
            <div class="card text-white bg-success mb-3 text-center">
                <div class="card-body">
                    <h4 class="card-title">Hesabat Sayi</h4>
                    @if (Model.ReportSayi > 0)
                    {
                        <p class="card-text display-4"> @Model.ReportSayi</p>
                        <p>
                            <a asp-controller="Job" asp-action="Index" class="btn btn-outline-light"><i class="fas fa-arrow-circle-right mr-1"></i>Incele</a>
                        </p>
                    }
                    else
                    {
                        <p class="card-text lead"> Hesabat Yazmamisiniz!</p>
                    }

                </div>
            </div>
        </div>

        <div class="col-6">
            <div class="card text-white bg-success mb-3 text-center">
                <div class="card-body">
                    <h4 class="card-title">Tamamlanan Is Sayi</h4>
                    @if (Model.TamamlananJobSayi > 0)
                    {
                        <p class="card-text display-4"> @Model.TamamlananJobSayi</p>
                        <p>
                            <a asp-controller="Job" asp-action="TamamlananIsler" class="btn btn-outline-light"><i class="fas fa-arrow-circle-right mr-1"></i>Incele</a>
                        </p>
                    }
                    else
                    {
                        <p class="card-text lead"> Is Tamamlamayibsiniz!</p>
                    }

                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-6">
            <div class="card text-white bg-success mb-3 text-center">
                <div class="card-body">
                    <h4 class="card-title">Oxunmamis Bildirim Sayi</h4>
                    @if (Model.OxunmamisBildirimSayi > 0)
                    {
                        <p class="card-text display-4"> @Model.OxunmamisBildirimSayi</p>
                        <p>
                            <a asp-controller="Bildirim" asp-action="Index" class="btn btn-outline-light"><i class="fas fa-arrow-circle-right mr-1"></i>Incele</a>
                        </p>
                    }
                    else
                    {
                        <p class="card-text lead"> Bildiriminiz Yoxdur!</p>
                    }

                </div>
            </div>
        </div>

        <div class="col-6">
            <div class="card text-white bg-success mb-3 text-center">
                <div class="card-body">
                    <h4 class="card-title">Tamamlanmayan Is Sayi</h4>
                    @if (Model.TamanlanmayanJobSayi > 0)
                    {
                        <p class="card-text display-4"> @Model.TamanlanmayanJobSayi</p>
                        <p>
                            <a asp-controller="Job" asp-action="Index" class="btn btn-outline-light"><i class="fas fa-arrow-circle-right mr-1"></i>Incele</a>
                        </p>
                    }
                    else
                    {
                        <p class="card-text lead"> Is Yoxdur!</p>
                    }

                </div>
            </div>
        </div>
    </div>
</div>
